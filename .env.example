# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Vector Store Configuration
VECTOR_STORE_TYPE=faiss  # faiss or pinecone
VECTOR_STORE_PATH=./data/vector_store
VECTOR_DIMENSION=1536

# Pinecone (if using cloud vector store)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=agentic-memory

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/agentic.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/agentic.log

# Voice Configuration (optional)
ENABLE_VOICE_INPUT=false
ENABLE_VOICE_OUTPUT=false
WHISPER_MODEL=base
TTS_ENGINE=pyttsx3

# API Server Configuration (optional)
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Memory Configuration
MAX_CONTEXT_TOKENS=2000
MEMORY_RETRIEVAL_COUNT=5
CONVERSATION_HISTORY_LENGTH=10

# Integration APIs (optional)
GOOGLE_CALENDAR_CREDENTIALS_PATH=./credentials/google_calendar.json
GMAIL_CREDENTIALS_PATH=./credentials/gmail.json

# Security
ENCRYPT_LOCAL_DATA=false
ENCRYPTION_KEY=your-encryption-key
